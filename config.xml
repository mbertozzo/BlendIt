<?xml version='1.0' encoding='utf-8'?>
<widget id="com.mohole.blendit" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>BlendIt</name>
    <description>
        An app that allows to share recipes with all the users
    </description>
    <author email="riggio.francesco@gmail.com" href="https://scuola.mohole.it">
        Matteo Bertozzo | Mohole Team
    </author>
    <content src="index.bundle.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="ldpi" src="res/icon/android/mipmap-ldpi/blendit.png" />
        <icon density="hdpi" src="res/icon/android/mipmap-hdpi/blendit.png" />
        <icon density="mdpi" src="res/icon/android/mipmap-mdpi/blendit.png" />
        <icon density="xhdpi" src="res/icon/android/mipmap-xhdpi/blendit.png" />
        <icon density="xxhdpi" src="res/icon/android/mipmap-xxhdpi/blendit.png" />
        <icon density="xxxhdpi" src="res/icon/android/mipmap-xxxhdpi/blendit.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <engine name="browser" spec="^5.0.3" />
    <engine name="android" spec="^7.0.0" />
</widget>
